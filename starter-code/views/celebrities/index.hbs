<h2>Famous Celebrities</h2>
<div class="d-flex flex-wrap justify-content-center">

    {{#each celebrities}}
        <div class="card m-4" style="width: 18rem;">
        <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">Occupation: {{this.occupation}}</p>
                <p class="card-text">Catch Phrase: {{this.catchPhrase}}</p>
                <div class= "d-flex">
                <a href="/celebrities/{{_id}}" class="btn btn-primary m-2 d-inline">Learn more</a>
                <a href="/celebrities/{{id}}/edit" class="btn btn-primary m-2 d-inline">Edit</a>
                <form action="/celebrities/{{id}}/delete" method="POST"> 
                    <button class="btn btn-outline-danger m-2 d-inline">Delete</button>
                </form>
                </div>
            </div>
        </div>  
    {{/each}}
</div>